{
  "files.exclude": {
    ".vscode": true, // use the editor command to open it
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/*.code-search": true
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--config=${workspaceFolder}/.golangci.yml"],
  "go.useLanguageServer": true,
  "editor.rulers": [120],
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true
  },

  "[proto3]": {
    "editor.defaultFormatter": "bufbuild.vscode-buf",
    "editor.formatOnSave": true
  }
}
